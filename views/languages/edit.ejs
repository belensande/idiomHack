<h3>Edit <%= language.name %></h3>
<div class="row">
	<div class="col-sm-6">
		<form action="/languages/<%= language._id %>" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="name" class="control-label">Name</label>
				<input type="text" id="name" name="name" class="form-control" value="<%= language.name %>"/>
			</div>
			<div class="form-group">
				<label for="photo" class="control-label">Flag</label>
        <img src="<%= language.flagImgPath %>" class="little-profile separated-block"/>
        <input type="hidden" name="flagImgPath" value="<%= language.flagImgPath %>" />
        <input type="file" name="photo" id="photo" class="form-control">
			</div>
			<button type="submit" class="btn btn-primary">Save</button>
			<br></br>
		</form>
	</div>
</div>